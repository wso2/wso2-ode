<process xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://docs.oasis-open.org/wsbpel/2.0/process/executable ../../../../../../../bpel-schemas/src/main/resources/wsbpel_executable.xsd"
    xmlns:tns="http://ode/bpel/unit-test/TestXPathNumberFunctionsSum"
    xmlns:wns="http://ode/bpel/unit-test/TestXPathNumberFunctions.wsdl"
    targetNamespace="http://ode/bpel/unit-test/TestXPathNumberFunctionsSum"
    xmlns:types1="http://ode/bpel/unit-test/TestXPathNumberFunctions.wsdl.types1"
    xmlns:prb="http://ode/bpel/unit-test/ProbeService.wsdl"
    xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
    name="TestXPathNumberFunctionsSum"
    queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath2.0"
    expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath2.0"
    suppressJoinFailure="yes">

    <import location="TestXPathNumberFunctions.wsdl"
        namespace="http://ode/bpel/unit-test/TestXPathNumberFunctions.wsdl"
        importType="http://schemas.xmlsoap.org/wsdl/" />

    <!-- test namespace syntax within XPATH expression -->
    <partnerLinks>
        <partnerLink name="request" partnerLinkType="wns:TestXPathNumberFunctionsSumRequest" myRole="TestXPathNumberFunctionsService"/>
    </partnerLinks>
    <variables>
        <variable name="request" messageType="wns:requestMessage1"/>
        <variable name="reply" messageType="wns:replyMessage1"/>
    </variables>
    <sequence>
        <receive name="receive1" partnerLink="request" portType="wns:TestXPathNumberFunctionsSumPT" operation="requestSum" variable="request" createInstance="yes"> </receive>
        <!-- Copy input variables to internal accumulators -->
        <assign name="assign1">

            <copy>
                <from>sum($request.requestMessageData/inputSum)</from>
                <to variable="reply" part="replySum"/>
            </copy>

        </assign>
        <reply name="reply" partnerLink="request" portType="wns:TestXPathNumberFunctionsSumPT" operation="requestSum" variable="reply"> </reply>
    </sequence>
</process>
